pipeline{
    agent any
    
    environment{
        PATH = "/usr/share/maven:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git branch: 'main', credentialsId: 'git_id', url: 'https://github.com/jva08/hey.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                }
         }
     }
 }
